\mode<presentation>

\useinnertheme[shadow=true]{rounded}
%\useinnertheme{rounded}
%\useinnertheme{circles}
\useoutertheme{infolines}
\usecolortheme{wolfstat}

\setbeamercolor{NCSU rule}{fg=wolfred,bg=wolfred}
\setbeamercolor{NCSU head/foot}{fg=black,bg=white}
\setbeamerfont{NCSU details}{size=\Tiny}
\setbeamerfont{NCSU page number}{size=\tiny}


\newcommand{\NCSUupperline}[1]{\def\@NCSUupperline{#1}}
\def\@NCSUupperline{}
\newcommand{\NCSUlowerline}[1]{\def\@NCSUlowerline{#1}}
\def\@NCSUlowerline{}

\defbeamertemplate*{footline}{NCSU theme}
{
  \leavevmode%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1pt]{NCSU head/foot}%
    \hrulefill%
  \end{beamercolorbox}\par%
  \hbox{%
    \begin{beamercolorbox}[wd=.2\paperwidth,ht=3ex,dp=1.15ex,center]%
          {NCSU head/foot}%
      \usebeamerfont{NCSU page number}%
      \insertframenumber{} / \inserttotalframenumber%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.4\paperwidth,ht=3ex,dp=1ex,right]%
          {section in head/foot}%
      \usebeamerfont{section in head/foot}%
      \insertsectionhead\hspace*{2ex}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.4\paperwidth,ht=3ex,dp=1ex,left]%
          {subsection in head/foot}%
      \usebeamerfont{subsection in head/foot}%
      \hspace*{2ex}\insertsubsectionhead%
    \end{beamercolorbox}%
  }%
  \vskip0pt%
}

\defbeamertemplate*{headline}{NCSU theme}
{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=.4\paperwidth,ht=3.5ex,left]%
          {NCSU head/foot}%
      \pgfdeclareimage[height=5ex]{ncsu-logo}{ncsu-red}
      \hspace{-0.35em}\raisebox{-1.5ex}{\pgfuseimage{ncsu-logo}}
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.6\paperwidth,ht=3.5ex,vmode]%
          {NCSU head/foot}%
       \begin{beamercolorbox}[wd=.6\paperwidth,ht=1.75ex,dp=-1ex,right]%
             {NCSU head/foot}%
           \usebeamerfont{NCSU details}%
           \@NCSUupperline{}\hspace*{2em}%
       \end{beamercolorbox}%
       \begin{beamercolorbox}[wd=.6\paperwidth,ht=1.75ex,right]%
             {NCSU head/foot}%
         \usebeamerfont{NCSU details}%
         \raisebox{-1ex}{\@NCSUlowerline}\hspace*{2em}%
       \end{beamercolorbox}%
    \end{beamercolorbox}%
  }%
  \par%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1pt]{NCSU rule}%
    \hrulefill%
  \end{beamercolorbox}%
  \par%
  \vskip0pt%
}

\setbeamersize{text margin left=1em,text margin right=1em}

\setbeamerfont{block title}{size={}}
